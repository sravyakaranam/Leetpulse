{
    "manifest_version": 3,
    "name": "LeetCode Streak Tracker",
    "version": "1.0",
    "description": "Tracks your daily LeetCode problem-solving streak.",
    "permissions": ["storage", "activeTab", "scripting", "webRequest"],
    "host_permissions": ["https://leetcode.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  